{
    "endOfLine": "auto",
    "bracketSpacing": true,
    "overrides": [
        {
            "files": "*.sol",
            "options": {
                "tabWidth": 4,
                "singleQuote": false,
                "explicitTypes": "always"
            }
        },
        {
            "files": "*.{js,ts}",
            "options": {
                "arrowParens": "avoid",
                "tabWidth": 2,
                "singleQuote": true,
                "semi": false
            }
        }
    ]
}
